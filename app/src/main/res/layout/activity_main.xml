<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/workspace"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textColor="@color/actionbutton"
        android:layout_gravity="end"
        android:ellipsize="start"
        android:singleLine="true"
        android:textSize="40sp"/>

    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="#000000"
        android:layout_gravity="end"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="30sp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clear"
                style="@style/actionbtn"
                android:layout_height="110dp"
                android:text="CLR"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/divide"
                style="@style/operators"
                android:layout_height="110dp"
                android:text="/"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
              android:id="@+id/seven"
                style="@style/keypad"
                android:text="7"/>

            <TextView
                android:id="@+id/eight"
                style="@style/keypad"
                android:text="8"/>

            <TextView
                android:id="@+id/nine"
                style="@style/keypad"
                android:text="9"/>

            <TextView
                android:id="@+id/multiply"
                style="@style/operators"
                android:text="*"/>
         </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/four"
                style="@style/keypad"
                android:text="4"/>

            <TextView
                android:id="@+id/five"
                style="@style/keypad"
                android:text="5"/>

            <TextView
                android:id="@+id/six"
                style="@style/keypad"
                android:text="6"/>

            <TextView
                android:id="@+id/minus"
                style="@style/operators"
                android:text="-"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/one"
                style="@style/keypad"
                android:text="1"/>

            <TextView
                android:id="@+id/two"
                style="@style/keypad"
                android:text="2"/>

            <TextView
                android:id="@+id/three"
                style="@style/keypad"
                android:text="3"/>

            <TextView
                android:id="@+id/add"
                style="@style/operators"
                android:text="+"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dot"
                style="@style/operators"
                android:text="."/>

            <TextView
                android:id="@+id/zero"
                style="@style/keypad"
                android:text="0"/>

            <TextView
                android:id="@+id/delete"
                style="@style/operators"
                android:text="DEL"/>

            <TextView
                android:id="@+id/equals"
                style="@style/equal"
                android:text="="/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>